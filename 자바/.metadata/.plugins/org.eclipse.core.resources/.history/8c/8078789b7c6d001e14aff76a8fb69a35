
import java.util.*;

public class Main {

	public static void main(String[] args) {
		Calendar calendar = Calendar.getInstance();
		
		int year = calendar.get(Calendar.YEAR);	// 년도 들고오기
		int month = calendar.get(Calendar.MONTH) + 1;	// 월 들고오기
		int day = calendar.get(Calendar.DAY_OF_MONTH);	// 일들고오기
		
		System.out.println(year + "년");
		System.out.println(month + "월");
		System.out.println(day + "일");
	}

}
